<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 배경 네모 박스 3개 (상단, 중단, 하단) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 상단 박스 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_weight="0"
            android:background="#195F4D" />
        <!-- 중단 박스 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:background= "#E3ECE5" />
        <!--"#E3ECE5" "#C5E1A5" -->
        <!-- 하단 박스 -->

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#195F4D" />
    </LinearLayout>

    <!-- 뒤로가기 버튼 -->
    <ImageButton
        android:id="@+id/btnBack"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@android:drawable/ic_menu_revert"
        android:contentDescription="뒤로가기"
        android:layout_marginTop="4dp"
        android:layout_gravity="start"/>

    <!-- 기존 내용 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="24dp">

    <!-- 제목 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_marginBottom="16dp"
            android:text="식재료 추가"
            android:textAlignment="center"
            android:textSize="22sp"
            android:textStyle="bold" />


        <!-- 마스코트 + 말풍선 추가 부분 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/tv_mascot_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 안에 너 있다."
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginEnd="8dp"
                android:background="@drawable/speech_bubble_background"
                android:padding="8dp" />

            <ImageView
                android:id="@+id/iv_mascot"
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:src="@drawable/mas3"
                android:contentDescription="마스코트 이미지" />
        </LinearLayout>

    <!-- 식재료 이름 입력란 -->
    <EditText
        android:id="@+id/etFoodName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="48dp"
        android:padding="12dp"
        android:hint="식재료명 입력"
        android:textSize="18sp"
        android:layout_marginBottom="14dp"
        android:background="@android:drawable/editbox_background"/>

    <!-- 유통기한 선택(날짜) -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="유통기한"
        android:textSize="16sp"/>
    <Button
        android:id="@+id/btnSelectDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="날짜 선택"
        android:backgroundTint="#195F4D"
        android:layout_marginBottom="18dp"/>

    <!-- 저장/취소 버튼 -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end">

        <android.widget.Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="저장"
            android:background="#195F4D"
            android:textColor="#FFFFFF"/>

        <Space
            android:layout_width="20dp"
            android:layout_height="wrap_content" />

        <android.widget.Button
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="취소"
            android:background="@drawable/button_background"
            android:textColor="#FFFFFF"/>
    </LinearLayout>
</LinearLayout>
</FrameLayout>